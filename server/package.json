{
  "name": "server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev",
    "generate-types": "wrangler types",
    "type-check": "bun run generate-types && tsc",
    "dev:mast": "mastra dev",
    "build:mast": "mastra build",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:start": "docker compose up -d",
    "db:watch": "docker compose up",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down",
    "cf-gen-types": "wrangler types --env-interface CloudflareBindings",
    "better-auth-gen-schema": "bunx @better-auth/cli@latest generate --config ./better-auth.config.ts --output ./src/db/schema/auth.ts"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.17",
    "@mastra/fastembed": "^0.10.6",
    "@mastra/memory": "^0.15.10",
    "@mastra/pg": "^0.17.7",
    "@neondatabase/serverless": "^1.0.2",
    "ai": "^5.0.60",
    "better-auth": "^1.4.5",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.7.11",
    "pg": "^8.16.3",
    "shared": "workspace:*",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@mastra/core": "^0.23.3",
    "@types/bun": "latest",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.6",
    "mastra": "^0.17.7",
    "wrangler": "^4.46.0"
  }
}
