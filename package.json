{
  "name": "ai-sdk-bhvr",
  "version": "0.4.0",
  "description": "A monorepo template built with Bun, Hono, Vite, and React",
  "author": "Steve Simkins",
  "license": "MIT",
  "homepage": "https://github.com/stevedylandev/bhvr",
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "./server",
    "./client",
    "./shared"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:client": "turbo dev --filter=client",
    "dev:server": "turbo dev --filter=server",
    "dev:shared": "turbo dev --filter=shared",
    "build": "turbo run build",
    "build:client": "turbo run build --filter=client",
    "build:server": "turbo run build --filter=server",
    "build:shared": "turbo run build --filter=shared",
    "deploy": "turbo run deploy",
    "deploy:server": "turbo run deploy --filter=server",
    "postinstall": "turbo run build --filter=shared --filter=server",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "lint": "biome lint .",
    "format": "biome format . --write"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "turbo"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "bun-types": "latest",
    "turbo": "2.5.9-canary.0"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  }
}